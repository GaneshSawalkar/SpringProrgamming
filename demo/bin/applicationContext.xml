<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                http://www.springframework.org/schema/context 
               http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />
	<bean id="add1" class="annotation.Address">
		<constructor-arg value="mumbai" />
		<constructor-arg value="Maharashtra" />
		<constructor-arg value="India" />
	</bean>
	<bean id="address" class="annotation.Address">
		<constructor-arg value="navi-mumbai" />
		<constructor-arg value="maharashtra" />
		<constructor-arg value="india" />
	</bean>

	<bean id="emp1" class="annotation.Employee">
		<property name="identity" value="1" />
		<property name="name" value="ganesh" />


	</bean>

	<!-- get details from parent emp1 -->
	<bean id="emp2" class="annotation.Employee" parent="emp1">

	</bean>

</beans>  