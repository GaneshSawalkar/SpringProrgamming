<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<bean id="a1" class="demo.address">
		<constructor-arg value="mumbai" />
		<constructor-arg value="Maharashtra" />
		<constructor-arg value="India" />
	</bean>
	<bean id="address" class="demo.address">
		<constructor-arg value="navi-mumbai" />
		<constructor-arg value="maharashtra" />
		<constructor-arg value="india" />
	</bean>

	<bean id="emp1" class="demo.Employee">
		<constructor-arg value="1" type="int" />
		<constructor-arg value="ganesh" />
		<constructor-arg ref="address"/>

	</bean>

	<!-- get details from parent emp1 -->
	<bean id="emp2" class="demo.Employee" parent="emp1">

	</bean>

</beans>  